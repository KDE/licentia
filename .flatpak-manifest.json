{
    "id": "org.kde.licentia",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "licentia",
    "tags": [
        "nightly"
    ],
    "desktop-file-name-suffix": " (Nightly)",
